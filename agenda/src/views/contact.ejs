<%- include('includes/header') %>
<%- include('includes/nav') %>
    <main class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <!-- My Content -->
            <div class="col-lg-8 my-3">
                <h1 class="display-1 text-center">Contato</h1>
                <p class="text-center lead">Crie ou Edite seu contato abaixo.</p>

                <%- include('includes/messages') %>

                <form action="/contato/register" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" value="<%= contact.name %>" class="form-control" name="name">
                    </div>

                    <div class="form-group">
                        <label>Sobrenome</label>
                        <input type="text" value="<%= contact.surname %>" class="form-control" name="surname">
                    </div>

                    <div class="form-group">
                        <label>E-mail</label>
                        <input type="email" value="<%= contact.email %>" class="form-control" name="email">
                    </div>

                    <div class="form-group">
                        <label>Telefone</label>
                        <input type="tel" value="<%= contact.phone %>" class="form-control" name="phone">
                    </div>

                    <button type="submit" class="btn btn-primary">Criar Contato</button>
                </form>

            </div>

            <div class="col-lg-2"></div>
        </div>
    </main>
<%- include('includes/footer') %>